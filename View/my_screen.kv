<PinScreen>
    MDBoxLayout:
        padding: 20,200
        spacing:40
        MDTextFieldRound:
            id: pin
            hint_text:"enter your pin"
        Button:
            text:"OK"
            pos_hint:{'x':0.35,'y':0}
            font_size:15
            size_hint:0.15,0.15
            on_press: root.enter_pin()
    MDFloatLayout:
        Button:
            id: bank
            text:"call"
            pos_hint:{'x':0.9,'y':0}
            font_size:12
            size_hint:0.07,0.07
            on_press: root.unlock_your_card()

<GeneralScreen>
    BoxLayout
        orientation: 'horizontal'
        padding: 20, 250
        spacing: 20
        Button:
            text:"Check the balance"
            on_press: root.manager.current = 'card balance'
        Button:
            text:"To pay the telephone bill"
            on_press: root.manager.current = 'telephone bill'
        Button:
            text:"Add new banknotes"
            on_press: root.manager.current = 'add new banknotes'

        Button:
            text:"Withdrawal money"
            on_press: root.manager.current = 'withdrawal'
    MDFloatLayout:
        Button:
            text:"exit"
            pos_hint:{'center_x':0.5,'y':0}
            font_size:12
            size_hint:0.07,0.07
            on_press: root.complete_the_program()

